      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "",
              "pm.test(\"Status code is 200 OK\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response time is acceptable (under 2 seconds)\", function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(2000);",
              "});",
              "",
              "pm.test(\"Content-Type header is application/json\", function () {",
              "    pm.response.to.have.header(\"Content-Type\");",
              "    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"application/json\");",
              "});",
              "",
              "pm.test(\"Response body is an array\", function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.be.an(\"array\");",
              "});",
              "",
              "pm.test(\"Each author has required fields with correct types\", function () {",
              "    const jsonData = pm.response.json();",
              "    ",
              "    if (jsonData.length > 0) {",
              "        jsonData.forEach((author, index) => {",
              "            pm.expect(author).to.have.property(\"id\");",
              "            pm.expect(author.id).to.be.a(\"number\");",
              "            ",
              "            pm.expect(author).to.have.property(\"idBook\");",
              "            pm.expect(author.idBook).to.be.a(\"number\");",
              "            ",
              "            pm.expect(author).to.have.property(\"firstName\");",
              "            pm.expect(author.firstName).to.be.a(\"string\");",
              "            ",
              "            pm.expect(author).to.have.property(\"lastName\");",
              "            pm.expect(author.lastName).to.be.a(\"string\");",
              "        });",
              "    }",
              "});",
              "",
              "pm.test(\"All returned authors belong to the requested book\", function () {",
              "    const jsonData = pm.response.json();",
              "    const requestedBookId = parseInt(pm.collectionVariables.get(\"idBook\"));",
              "    ",
              "    if (jsonData.length > 0 && !isNaN(requestedBookId)) {",
              "        jsonData.forEach((author) => {",
              "            pm.expect(author.idBook).to.equal(requestedBookId);",
              "        });",
              "    }",
              "});"
            ],
